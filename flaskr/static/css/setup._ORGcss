div.bordered {
    border-style: solid;
    border-width: 1px;
}

div.clear {
    clear: both;
    width: 100%;
    height: 100%;
}

div.splitl {
    float:left;
    width:50%;
    padding-right:2%;
    border-right: thin solid #cccccc;
}

div.splitr {
    float:right;
    width:50%;
    padding-left:2%;
    border-left: thin solid #cccccc;

div.main {
    width: 100%;
}

